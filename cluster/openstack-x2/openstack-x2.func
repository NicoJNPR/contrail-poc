launch_builder()
{
    local arr=(${vm_address_list[command-a]})
    local host=${arr[0]}

    echo "Launch builder..."
    launch_vm "command-a"
    wait_for_host "command-a"
    launch_vm "command-b"
    wait_for_host "command-b"

    copy_ssh_key $host
    ssh $host yum install -y ansible git
}

delete_builder()
{
    echo "Delete builder..."
    delete_vm "command-a"
    delete_vm "command-b"
}

pre_deployment()
{
    echo "Pre-Deployment"
}

deploy()
{
    local arr=(${vm_address_list[command-a]})
    local host=${arr[0]}

    load_playbook $contrail_playbook $host
    upload_instances_yaml $host instances-a.yaml
    run_playbook_openstack $host
    upload_instances_yaml $host instances-b.yaml
    run_playbook_openstack $host
}

setup_openstack_a()
{
    local arr=(${vm_address_list[openstack-a]})
    local host=${arr[0]}

    scp $image_path/$image_cirros $host:/etc/kolla/kolla-toolbox/
    ssh $host "docker exec kolla_toolbox \
      bash -c \"source /var/lib/kolla/config_files/admin-openrc.sh; \
        openstack flavor create \
          --id 1 --disk 1 --ram 512 --vcpus 1 --public m1.tiny\""
    ssh $host "docker exec kolla_toolbox \
      bash -c \"source /var/lib/kolla/config_files/admin-openrc.sh; \
        openstack image create \
          --container-format bare --disk-format qcow2 --public \
          --file /var/lib/kolla/config_files/$image_cirros cirros\""
    ssh $host "rm -f /etc/kolla/kolla-toolbox/$image_cirros"
}

setup_openstack_b()
{
    local arr=(${vm_address_list[openstack-a]})
    local host=${arr[0]}

    scp $image_path/$image_cirros $host:/etc/kolla/kolla-toolbox/
    ssh $host "docker exec kolla_toolbox \
      bash -c \"source /var/lib/kolla/config_files/admin-openrc.sh; \
