}

post_deployment()
{
    local arr

    echo "Post-Deployment"
    configure_haproxy
    setup_openstack_a
    setup_openstack_b
    arr=(${vm_address_list[command-a]})
    install_command ${arr[0]}
    launch_command ${arr[0]} command_servers.yml instances-a.yaml
    arr=(${vm_address_list[command-b]})
    install_command ${arr[0]}
    launch_command ${arr[0]} command_servers.yml instances-b.yaml
}

